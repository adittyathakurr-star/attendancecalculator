<body>

<div class="box">
    <h2>Attendance Calculator</h2>

    <label>Total Classes</label>
    <input type="number" id="total" placeholder="Enter total classes">

    <label>Classes Attended</label>
    <input type="number" id="attended" placeholder="Enter attended classes">

    <button onclick="calculate()">Calculate</button>

    <div class="result" id="result"></div>
</div>

<script>
function calculate() {
    let total = document.getElementById("total").value;
    let attended = document.getElementById("attended").value;
    let result = document.getElementById("result");

    if (total === "" || attended === "" || total <= 0 || attended < 0) {
        result.innerHTML = "Please enter valid numbers.";
        return;
    }

    let percentage = (attended / total) * 100;
    percentage = percentage.toFixed(2);

    let required = 0;
    if (percentage < 75) {
        while ((attended + required) / (total + required) < 0.75) {
            required++;
        }
        result.innerHTML = `
            Attendance: ${percentage}% <br>
            Classes needed to reach 75%: ${required}
        `;
    } else {
        result.innerHTML = `
            Attendance: ${percentage}% <br>
            You are safe üëç
        `;
    }
}
</script>

